<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/cardview"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/bank_logo_imageView" />
            <View
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="#7B6E68"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/bank_logo_imageView"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginStart="15dp"
                android:orientation="vertical"
                android:layout_marginEnd="15dp"
                android:id="@+id/qw"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/bank_logo_imageView"
                android:layout_toEndOf="@+id/bank_logo_imageView">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بنك الاهلي المركزي"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/banks_name_textView"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="بنك الاهلي المركزي"
                    android:textSize="14sp"
                    android:id="@+id/banks_name_textViewar"
                    />
            </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/currSEll_TextView"
                        android:text="sell"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/buyCurr_TextView"
                        android:layout_toStartOf="@+id/buyCurr_TextView"
                        android:layout_marginRight="11dp"
                        android:layout_marginEnd="11dp" />
                    <TextView
                        android:id="@+id/buyCurr_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="buy"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginEnd="15dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>